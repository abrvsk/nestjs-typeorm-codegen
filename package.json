{
    "name": "nestjs-typeorm-codegen",
    "version": "1.0.0",
    "description": "Generate nestjs project with typeorm by schema",
    "main": "readSchema.ts",
    "author": "Andrii Borovskyi",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:abrvsk/nestjs-typeorm-codegen.git"
    },
    "bin": {
        "codegen": "dist/bin/codegen.js"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "tslint --fix",
            "git add"
        ]
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "babel-node": "babel-node",
        "test": "jest",
        "build": "tsc"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsConfig": "test/tsconfig.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "**/test/**/*.test.(ts|js)"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/",
            "/coverage/"
        ],
        "modulePathIgnorePatterns": [
            "<rootDir>/.*/__mocks__"
        ],
        "testEnvironment": "node"
    },
    "dependencies": {
        "commander": "^2.20.0",
        "yarn": "^1.17.3"
    },
    "devDependencies": {
        "@types/commander": "^2.12.2",
        "@types/jest": "^24.0.13",
        "@types/node": "^12.0.4",
        "@types/uuid": "^3.4.4",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.8.0",
        "babel-plugin-transform-runtime": "*",
        "babel-preset-env": "^1.7.0",
        "babel-preset-stage-0": "^6.24.1",
        "jest": "^24.8.0",
        "jest-cli": "^24.8.0",
        "prettier": "^1.17.1",
        "ts-jest": "^23.10.5",
        "ts-node": "^8.0.2",
        "tslint": "^5.12.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.3.3",
        "typescript-tslint-plugin": "^0.3.1"
    }
}
